@using DentistBookingForm.ViewModels
@model ProcedureViewModel
@{
	var test = ViewBag.AvailableDoctors;
}
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-success">Create Procedure</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<input asp-for="Id" class="form-control" type="hidden" />
		<div class="mb-3">
			<label asp-for="Name"> </label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Doctor.Id"></label>
			<select asp-for="Doctor.Id" class="form-control">
				@foreach(var doctor in ViewBag.AvailableDoctors)
				{
					<option value="@doctor.Id">@doctor.UserName</option>
				}
			</select>
			<span asp-validation-for="Doctor.Id" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-success" style="width:150px">Create</button>
		<a asp-controller="Procedure" asp-action="Index" class="btn btn-success" style="width:150px">
			Back to List
		</a>
	</div>
</form>
@section Scripts {
   @{
	<partial name="_ValidationScriptsPartial" />
    }
}