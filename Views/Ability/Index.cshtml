@using DentistBookingForm.ViewModels
@model List<AbilityViewModel>

@{
	ViewData["Title"] = "Ability Page";
}
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-success">Ability</h2>
        </div>
		<div class="col-6 text-end">
			 </div>
			 <a asp-controller="Ability" asp-action="Create" class="btn btn-success">
				<i class="bi bi-plus-circle"></i> &nbsp;Create New Ability
			</a>
			
</div>
<br/> <br/>


<table class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			
			<th>Nr. de ordine</th>
			<th>Abilitatea</th>
			<th>Doctor</th>
			<th>Edit/Delete</th>
		</tr>
			@foreach(var ability in Model)
			{
				<tr>
					<td>@ability.Id</td>
					<td>@ability.Name</td>
					<td>@ability.Doctor.UserName/td>
					<td><div class="w-75 btn-group" role="group">
						<a asp-controller="Ability" asp-action="Edit" asp-route-id="@ability.Id"
						class="btn btn-success mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
						<a asp-controller="Ability" asp-action="Delete" asp-route-id="@ability.Id"
						class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div></td>
				
					
				</tr>
			
			}
		</thead> 
	<tbody>
		