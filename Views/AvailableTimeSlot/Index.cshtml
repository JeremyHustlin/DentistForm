@using DentistBookingForm.ViewModels
@model List<AvailableTimeSlotViewModel>

@{
	ViewData["Title"] = "TimeTable Page";
}
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-success">TimeTable</h2>
        </div>
		<div class="col-6 text-end">
			 </div>
			 <a asp-controller="AvailableTimeSlot" asp-action="Create" class="btn btn-success">
				<i class="bi bi-plus-circle"></i> &nbsp;Create New Time
			</a>
</div>
<br/> <br/>


<table class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			
			<th>Nr. de ordine</th>
			<th>Doctor</th>
			<th>Day</th>
			<th>Time</th>
			<th>Edit/Delete</th>
		</tr>
			@foreach(var time in Model)
			{
				<tr>
					<td>@time.Id</td>
					<td>@time.Doctor.UserName</td>
					<td>@time.DayOfWeek</td>
					<td>@time.Hour</td>
					<td><div class="w-50 btn-group" role="group">
						<a asp-controller="AvailableTimeSlot" asp-action="Edit" asp-route-id="@time.Id"
						class="btn btn-success mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
						<a asp-controller="AvailableTimeSlot" asp-action="Delete" asp-route-id="@time.Id"
						class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
						
                        </div></td>
				</tr>
			}
		</thead> 
	<tbody>
		
		